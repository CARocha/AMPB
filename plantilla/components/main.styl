.si-sticky{
    position: fixed;
    top: 33%;
    left: 0px;
    z-index: 100;
}
.social-share {
  border-radius: 3px;
  box-shadow: 0 1px 0 #e9e9e9 inset;
  background: $gris;
  border-color: $base #e7e7e7 #e4e4e4;
  border-radius: 3px;
  border-style: solid;
  border-width: 1px;
  box-shadow: 0 1px 0 #e9e9e9 inset;
  float: left;
  list-style: none;
  padding: 15px 10px;
  position: relative;
  text-align: center;
  margin: 20px;
}

.social-share li:first-child {
  margin-top: 0
}

.social-share li {
  margin-top: 10px
}

.social-share li a {
  display: block;
  background: $black_base;
  color: #efefef;
  border-radius: 25px;
  text-decoration: none;
  line-height: 40px;
  width: 40px;
  font-size: 20px;
}

.social-share a.tw:hover {
  background: #1da1f2
}

.social-share a.fb:hover {
  background: #3b5998
}
.social-share a.wt:hover {
  background: #075e54
}

.social-share a.gp:hover {
  background: #dd4b39
}

